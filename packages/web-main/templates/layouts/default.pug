block variables
doctype html
html(lang='en-ca')
	head
		meta(charset='utf-8')
		meta(
			name='viewport',
			value='initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no',
		)
		title TripSit &bull; #{title}

		link(rel='profile', href='http://gmpg.org/xfn/11')
		link(
			rel='alternate',
			type='application/rss+xml',
			title='TripSit &raquo; Feed',
			href='https://tripsit.me/feed/',
		)
		link(
			rel='alternate',
			type='application/rss+xml',
			title='TripSit &raquo; Comments Feed',
			href='https://tripsit.me/comments/feed/',
		)

		link(rel='stylesheet', href='/styles.css')
		script(src='/main.js', defer)
		block head
	body

		include partials/main-header

		main
			block content

		include partials/main-footer
